---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pageTitle = 'Mitgliederbereich Login – Repair Café Leonberg';
const pageDescription = 'Anmeldung für den internen Mitgliederbereich des Repair Café Leonberg.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />

  <main class="bg-slate-100 py-12 md:py-16">
    <section>
      <div class="container">
        <div class="mx-auto max-w-3xl text-center">
          <span class="inline-flex items-center gap-2 rounded-full bg-white px-4 py-1 text-xs font-semibold uppercase tracking-[0.2em] text-slate-500 shadow-sm">
            Mitgliederbereich
          </span>
          <h1 class="mt-5 heading-hero">
            Anmeldung für Vereinsmitglieder
          </h1>
          <p class="mt-3 text-base text-slate-600">
            Bitte melden Sie sich mit Ihren Zugangsdaten an, um in den internen Bereich zu gelangen.
          </p>
        </div>
      </div>
    </section>

    <section class="mt-12">
      <div class="container">
        <div class="grid gap-6">
          <div class="mx-auto w-full max-w-xl rounded-3xl bg-white p-8 text-center shadow-xl shadow-slate-900/5">
            <h2 class="heading-sub">Mitglieder Login</h2>
            <p class="mt-3 text-sm text-slate-600">Nutzen Sie die zentralen Zugangsdaten, die Sie vom Verein erhalten haben.</p>
            <form id="members-login-form" class="mt-6 space-y-6" autocomplete="off">
              <div class="flex flex-col items-center gap-2">
                <label for="username" class="text-sm font-medium text-slate-700">Benutzername</label>
                <input
                  id="username"
                  name="username"
                  type="text"
                  required
                  autocomplete="off"
                  class="w-full max-w-xs rounded-2xl border border-slate-300 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500"
                />
              </div>
              <div class="flex flex-col items-center gap-2">
                <label for="password" class="text-sm font-medium text-slate-700">Passwort</label>
                <input
                  id="password"
                  name="password"
                  type="password"
                  required
                  autocomplete="off"
                  class="w-full max-w-xs rounded-2xl border border-slate-300 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500"
                />
              </div>
              <p id="login-error" class="mx-auto hidden max-w-xs rounded-2xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                Das hat noch nicht geklappt. Bitte prüfen Sie Benutzername und Passwort oder melden Sie sich beim Orga-Team für Unterstützung.
              </p>
              <button
                type="submit"
                class="mt-4 inline-flex w-full max-w-xs justify-center rounded-full bg-[#DD714D] px-6 py-3 text-sm font-semibold text-white shadow transition hover:-translate-y-0.5 hover:bg-[#c35a39] focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-500"
              >
                Anmelden
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script>
    const AUTH_KEY = 'repaircafe.members.authenticated';
    const USERNAME = 'admin';
    const PASSWORD = 'repair25!1';

    const redirectToMembers = () => {
      window.location.href = '/members';
    };

    document.addEventListener('DOMContentLoaded', () => {
      if (sessionStorage.getItem(AUTH_KEY) === 'true') {
        redirectToMembers();
        return;
      }

      const form = document.getElementById('members-login-form');
      const errorNode = document.getElementById('login-error');

      form?.addEventListener('submit', (event) => {
        event.preventDefault();
        const username = (document.getElementById('username')?.value || '').trim();
        const password = document.getElementById('password')?.value || '';

        if (errorNode) {
          errorNode.classList.add('hidden');
        }

        if (username === USERNAME && password === PASSWORD) {
          sessionStorage.setItem(AUTH_KEY, 'true');
          redirectToMembers();
          return;
        }

        if (errorNode) {
          errorNode.classList.remove('hidden');
        }
      });
    });
  </script>
</BaseLayout>
